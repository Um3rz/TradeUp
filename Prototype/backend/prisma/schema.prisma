// Datasource
 datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
 }

 // Generator
 generator client {
  provider = "prisma-client-js"
 }

 // Enums
 enum Role {
  TRADER
  ADMIN
 }
 enum Side {
  BUY
  SELL
}

 // Models
 model User {
  id           Int             @id @default(autoincrement())
  email        String          @unique
  passwordHash String
  role         Role            @default(TRADER)
  createdAt    DateTime        @default(now())

  balance  BigInt    @default(100000)

  // Relations
  watchlist     WatchlistItem[]
  holdings      Holding[]
  txns          Txn[]
 }

 model Stock {
  id         Int             @id @default(autoincrement())
  symbol     String          @unique
  name       String?
  marketType String          @default("REG")
  createdAt  DateTime        @default(now())
  watchers   WatchlistItem[]
  holdings   Holding[]
  txns       Txn[]
 }

 model WatchlistItem {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  stock     Stock    @relation(fields: [stockId], references: [id])
  stockId   Int
  createdAt DateTime @default(now())

  @@unique([userId, stockId])
 }

// PORTFOLIO: one row per user+stock with whole-share quantity
model Holding {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  stock     Stock   @relation(fields: [stockId], references: [id], onDelete: Cascade)
  stockId   Int

  // Whole shares only
  shares    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, stockId])
  @@index([userId])
  @@index([stockId])
}

// LEDGER: append-only transaction history (execution price is per-share)
//
model Txn {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int
  stock        Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  stockId      Int

  side         Side
  shares       Int            // whole shares (positive)
  priceCents   BigInt         // execution price per share (cents)
  amountCents  BigInt         // optional: shares * priceCents (store for fast queries)

  createdAt    DateTime @default(now())

  @@index([userId, createdAt])
  @@index([stockId, createdAt])
}
